@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login to Quiz Application</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Success
                        </div>
                    }
                    
                    <form method="post" action="@Url.Action("Login", "Users")">
                        <div class="form-group mb-3">
                            <label for="email">UserName or Email:</label>
                            <input type="text" class="form-control" id="email" name="UserNameOrEmail" required>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                    
                    <hr>
                    
                    <div class="text-center">
                        <p>Don't have an account? <a href="@Url.Action("Register", "Users")" class="btn btn-link">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
