@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4 dashboard-wrapper">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-home text-primary me-2"></i>My Dashboard
            </h1>
            <p class="text-muted mb-0">Welcome back! Ready for your next quiz challenge?</p>
        </div>
        <div>
            <span class="badge bg-primary fs-6 me-2">User</span>
            <span class="text-muted">Hello, @ViewBag.Username</span>
        </div>
    </div>

    <!-- User Stats Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Quizzes Taken</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MyQuizSessions</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-play-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Completed</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CompletedQuizzes</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Answers Given</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.MyAnswers</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list-ul fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Available Categories</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.AvailableCategories</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tags fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Custom Quiz Notifications -->
    @if (ViewBag.NewCustomQuizCount != null && ViewBag.NewCustomQuizCount > 0)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
                    <h5 class="alert-heading">
                        <i class="fas fa-bell fa-shake me-2"></i>
                        <strong>New Custom Quiz@(ViewBag.NewCustomQuizCount > 1 ? "zes" : "") Assigned!</strong>
                    </h5>
                    <p class="mb-3">You have @ViewBag.NewCustomQuizCount new custom quiz@(ViewBag.NewCustomQuizCount > 1 ? "zes" : "") assigned to you.</p>
                    
                    <div class="row g-2">
                        @foreach (var assignment in ViewBag.NewCustomQuizzes)
                        {
                            <div class="col-md-6">
                                <div class="card border-warning">
                                    <div class="card-body p-3">
                                        <h6 class="card-title mb-2">
                                            <i class="fas fa-clipboard-list me-1 text-warning"></i>
                                            @assignment.UserQuiz.Title
                                        </h6>
                                        <p class="card-text small text-muted mb-2">
                                            <i class="fas fa-user me-1"></i>From: <strong>@assignment.UserQuiz.CreatedBy.Username</strong><br/>
                                            <i class="fas fa-clock me-1"></i>Time: @assignment.UserQuiz.TimeLimit minutes<br/>
                                            <i class="fas fa-question-circle me-1"></i>Questions: @assignment.UserQuiz.Questions.Count<br/>
                                            <i class="fas fa-calendar me-1"></i>Assigned: @assignment.AssignedDate.ToString("MMM dd, yyyy")
                                        </p>
                                        <a href="@Url.Action("Details", "CustomQuiz", new { id = assignment.UserQuizId })" class="btn btn-sm btn-warning">
                                            <i class="fas fa-play me-1"></i>View Quiz
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    <hr>
                    <div class="mb-0">
                        <a href="@Url.Action("AssignedQuizzes", "CustomQuiz")" class="btn btn-warning btn-sm">
                            <i class="fas fa-inbox me-2"></i>View All Assigned Quizzes
                        </a>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Custom Quiz Stats Row -->
    @if (ViewBag.TotalAssignedQuizzes != null && ViewBag.TotalAssignedQuizzes > 0)
    {
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Custom Quizzes Assigned</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalAssignedQuizzes</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-3">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Pending Custom Quizzes</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.PendingCustomQuizzes</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-hourglass-half fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <!-- Main Actions Panel -->
        <div class="col-lg-8">
            <!-- Quick Actions -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary text-white">
                    <h6 class="m-0 font-weight-bold">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Take Quiz -->
                        <div class="col-md-4 mb-3">
                            <div class="card bg-success text-white h-100">
                                <div class="card-body text-center d-flex flex-column">
                                    <div class="mb-3">
                                        <i class="fas fa-play fa-3x"></i>
                                    </div>
                                    <h5 class="card-title">Take Quiz</h5>
                                    <p class="card-text flex-grow-1">Start a new quiz session and test your knowledge</p>
                                    <a href="@Url.Action("Setup", "Quiz")" class="btn btn-light btn-sm mt-auto">Start Quiz</a>
                                </div>
                            </div>
                        </div>

                        <!-- Practice Mode -->
                        <div class="col-md-4 mb-3">
                            <div class="card bg-info text-white h-100">
                                <div class="card-body text-center d-flex flex-column">
                                    <div class="mb-3">
                                        <i class="fas fa-dumbbell fa-3x"></i>
                                    </div>
                                    <h5 class="card-title">Practice Mode</h5>
                                    <p class="card-text flex-grow-1">Practice with random questions without time limit</p>
                                    <a href="@Url.Action("Setup", "Practice", new { mode = "difficulty" })" class="btn btn-light btn-sm mt-auto">Practice Now</a>
                                </div>
                            </div>
                        </div>

                        <!-- Browse Categories -->
                        <div class="col-md-4 mb-3">
                            <div class="card bg-warning text-white h-100">
                                <div class="card-body text-center d-flex flex-column">
                                    <div class="mb-3">
                                        <i class="fas fa-th-large fa-3x"></i>
                                    </div>
                                    <h5 class="card-title">Categories</h5>
                                    <p class="card-text flex-grow-1">Browse available quiz categories and topics</p>
                                    <a href="@Url.Action("Setup", "Practice", new { mode = "category" })" class="btn btn-light btn-sm mt-auto">Browse</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Activity</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.MyQuizSessions > 0)
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Great job!</strong> You've completed @ViewBag.CompletedQuizzes out of @ViewBag.MyQuizSessions quiz sessions.
                                </div>
                                <div class="progress mb-3">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @(ViewBag.MyQuizSessions > 0 ? (ViewBag.CompletedQuizzes * 100 / ViewBag.MyQuizSessions) : 0)%">
                                        @(ViewBag.MyQuizSessions > 0 ? (ViewBag.CompletedQuizzes * 100 / ViewBag.MyQuizSessions) : 0)%
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No quiz activity yet</h5>
                            <p class="text-muted">Ready to take your first quiz? Click "Start Quiz" to begin!</p>
                            <a href="@Url.Action("Setup", "Quiz")" class="btn btn-primary">Take Your First Quiz</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- User Profile Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-gradient-primary text-white">
                    <h6 class="m-0 font-weight-bold">My Profile</h6>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <div class="mb-3">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                        </div>
                        <h5>@ViewBag.Username</h5>
                        <p class="text-muted">@ViewBag.CurrentUser.Email</p>
                        <span class="badge bg-primary mb-3">Quiz Participant</span>
                        
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Profile", "Users")" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-user me-2"></i>View Profile
                            </a>
                            <a href="@Url.Action("EditProfile", "Users")" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                            <a href="@Url.Action("QuizHistory", "Users")" class="btn btn-outline-info btn-sm">
                                <i class="fas fa-history me-2"></i>Quiz History
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quiz Statistics -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">My Statistics</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="small">Completion Rate</span>
                            <span class="small font-weight-bold">@(ViewBag.MyQuizSessions > 0 ? (ViewBag.CompletedQuizzes * 100 / ViewBag.MyQuizSessions) : 0)%</span>
                        </div>
                        <div class="progress progress-sm">
                            <div class="progress-bar bg-success" style="width: @(ViewBag.MyQuizSessions > 0 ? (ViewBag.CompletedQuizzes * 100 / ViewBag.MyQuizSessions) : 0)%"></div>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="text-center">
                        <div class="row">
                            <div class="col-6">
                                <div class="border-right">
                                    <h4 class="mb-0">@ViewBag.MyQuizSessions</h4>
                                    <small class="text-muted">Total Attempts</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <h4 class="mb-0">@ViewBag.MyAnswers</h4>
                                <small class="text-muted">Questions Answered</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Achievement Card -->
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Achievement</h6>
                </div>
                <div class="card-body text-center">
                    @if (ViewBag.CompletedQuizzes >= 10)
                    {
                        <i class="fas fa-trophy fa-3x text-warning mb-3"></i>
                        <h6 class="text-warning">Quiz Master</h6>
                        <small class="text-muted">Completed 10+ quizzes</small>
                    }
                    else if (ViewBag.CompletedQuizzes >= 5)
                    {
                        <i class="fas fa-medal fa-3x text-info mb-3"></i>
                        <h6 class="text-info">Quiz Expert</h6>
                        <small class="text-muted">Completed 5+ quizzes</small>
                    }
                    else if (ViewBag.CompletedQuizzes >= 1)
                    {
                        <i class="fas fa-star fa-3x text-success mb-3"></i>
                        <h6 class="text-success">Quiz Starter</h6>
                        <small class="text-muted">Completed your first quiz</small>
                    }
                    else
                    {
                        <i class="fas fa-rocket fa-3x text-primary mb-3"></i>
                        <h6 class="text-primary">Ready to Start</h6>
                        <small class="text-muted">Take your first quiz to earn achievements</small>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* ========================================
       MOONLIGHT SKY THEME - DASHBOARD STYLES
       ======================================== */
    
    /* Dashboard wrapper with floating particles */
    .dashboard-wrapper {
        position: relative;
        min-height: 100vh;
        overflow: hidden;
    }
    
    /* Floating particles effect */
    .dashboard-wrapper::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            radial-gradient(circle, rgba(100, 150, 255, 0.15) 1px, transparent 1px),
            radial-gradient(circle, rgba(150, 200, 255, 0.1) 1px, transparent 1px);
        background-size: 50px 50px, 80px 80px;
        background-position: 0 0, 40px 40px;
        animation: particleFloat 60s linear infinite;
        pointer-events: none;
        z-index: 0;
    }
    
    @@keyframes particleFloat {
        from { transform: translateY(0); }
        to { transform: translateY(-100px); }
    }

    /* Moonlight Glassmorphism Cards */
    .card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.06) 100%) !important;
        backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.18) !important;
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        box-shadow: 
            0 8px 32px rgba(0, 0, 0, 0.35),
            0 0 15px rgba(100, 150, 255, 0.15),
            inset 0 1px 0 rgba(255, 255, 255, 0.15) !important;
        position: relative;
        z-index: 1;
    }
    
    /* Card hover with moonlight glow */
    .card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 
            0 20px 50px rgba(0, 0, 0, 0.45),
            0 0 40px rgba(100, 150, 255, 0.35),
            inset 0 1px 0 rgba(255, 255, 255, 0.25) !important;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.18) 0%, rgba(255, 255, 255, 0.1) 100%) !important;
    }

    /* Moonlight Colored Left Borders with Glow */
    .border-left-primary {
        border-left: 0.3rem solid rgba(79, 109, 245, 0.9) !important;
        background: linear-gradient(135deg, rgba(79, 109, 245, 0.15) 0%, rgba(100, 150, 255, 0.08) 50%, rgba(255, 255, 255, 0.08) 100%) !important;
        box-shadow: -3px 0 15px rgba(79, 109, 245, 0.3) !important;
    }
    
    .border-left-success {
        border-left: 0.3rem solid rgba(40, 167, 69, 0.9) !important;
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.15) 0%, rgba(32, 201, 151, 0.08) 50%, rgba(255, 255, 255, 0.08) 100%) !important;
        box-shadow: -3px 0 15px rgba(40, 167, 69, 0.3) !important;
    }
    
    .border-left-info {
        border-left: 0.3rem solid rgba(23, 162, 184, 0.9) !important;
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.15) 0%, rgba(54, 185, 204, 0.08) 50%, rgba(255, 255, 255, 0.08) 100%) !important;
        box-shadow: -3px 0 15px rgba(23, 162, 184, 0.3) !important;
    }
    
    .border-left-warning {
        border-left: 0.3rem solid rgba(255, 193, 7, 0.9) !important;
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(246, 194, 62, 0.08) 50%, rgba(255, 255, 255, 0.08) 100%) !important;
        box-shadow: -3px 0 15px rgba(255, 193, 7, 0.3) !important;
    }
    
    .border-left-danger {
        border-left: 0.3rem solid rgba(220, 53, 69, 0.9) !important;
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.15) 0%, rgba(231, 74, 59, 0.08) 50%, rgba(255, 255, 255, 0.08) 100%) !important;
        box-shadow: -3px 0 15px rgba(220, 53, 69, 0.3) !important;
    }

    /* Moonlight Colored Action Cards */
    .bg-success {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.25) 0%, rgba(32, 201, 151, 0.2) 100%) !important;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        box-shadow: 
            0 8px 25px rgba(40, 167, 69, 0.3),
            0 0 20px rgba(40, 167, 69, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.2) !important;
    }
    
    .bg-success:hover {
        box-shadow: 
            0 12px 35px rgba(40, 167, 69, 0.45),
            0 0 40px rgba(40, 167, 69, 0.35) !important;
    }

    .bg-info {
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.25) 0%, rgba(54, 185, 204, 0.2) 100%) !important;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        box-shadow: 
            0 8px 25px rgba(23, 162, 184, 0.3),
            0 0 20px rgba(23, 162, 184, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.2) !important;
    }
    
    .bg-info:hover {
        box-shadow: 
            0 12px 35px rgba(23, 162, 184, 0.45),
            0 0 40px rgba(23, 162, 184, 0.35) !important;
    }

    .bg-warning {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.25) 0%, rgba(246, 194, 62, 0.2) 100%) !important;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        box-shadow: 
            0 8px 25px rgba(255, 193, 7, 0.3),
            0 0 20px rgba(255, 193, 7, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.2) !important;
    }
    
    .bg-warning:hover {
        box-shadow: 
            0 12px 35px rgba(255, 193, 7, 0.45),
            0 0 40px rgba(255, 193, 7, 0.35) !important;
    }

    /* Moonlight Card Headers */
    .card-header {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%) !important;
        backdrop-filter: blur(15px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: rgba(255, 255, 255, 0.95);
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, rgba(79, 109, 245, 0.3) 0%, rgba(100, 150, 255, 0.25) 100%) !important;
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        box-shadow: 
            0 4px 15px rgba(79, 109, 245, 0.3),
            0 0 20px rgba(79, 109, 245, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    /* Moonlight Alert Styles */
    .alert {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.08) 100%) !important;
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.15) !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.25);
    }

    .alert-warning {
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.2) 0%, rgba(246, 194, 62, 0.15) 100%) !important;
        border-color: rgba(255, 193, 7, 0.35) !important;
        box-shadow: 0 4px 20px rgba(255, 193, 7, 0.25);
    }

    .alert-info {
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.2) 0%, rgba(54, 185, 204, 0.15) 100%) !important;
        border-color: rgba(23, 162, 184, 0.35) !important;
        box-shadow: 0 4px 20px rgba(23, 162, 184, 0.25);
    }

    /* Enhanced Text Styling */
    .text-gray-800 {
        color: rgba(255, 255, 255, 0.95) !important;
        font-weight: 700;
        text-shadow: 0 0 10px rgba(100, 150, 255, 0.3);
    }
    
    .text-gray-300 {
        color: rgba(255, 255, 255, 0.5) !important;
        filter: drop-shadow(0 0 5px rgba(100, 150, 255, 0.2));
    }
    
    .font-weight-bold {
        font-weight: 700 !important;
    }
    
    .text-xs {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: rgba(255, 255, 255, 0.75);
    }

    /* Moonlight Progress Bar */
    .progress {
        background: rgba(255, 255, 255, 0.1) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.2);
        overflow: visible;
