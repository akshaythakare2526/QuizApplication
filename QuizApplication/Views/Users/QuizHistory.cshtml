@model IEnumerable<QuizApplication.Models.QuizSessions>
@{
    ViewData["Title"] = "Quiz History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-history text-info me-2"></i>My Quiz History
            </h1>
            <p class="text-muted mb-0">Track your quiz performance and progress over time</p>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Users")">Dashboard</a></li>
                <li class="breadcrumb-item active">Quiz History</li>
            </ol>
        </nav>
    </div>

    <!-- Display TempData Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Quiz History Table -->
        <div class="col-lg-12">
            <div class="card shadow border-0">
                <div class="card-header bg-gradient-info text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list me-2"></i>Quiz Sessions
                        </h5>
                        <div>
                            <a href="@Url.Action("Dashboard", "Users")" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">
                                            <i class="fas fa-hashtag me-2"></i>Session ID
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-calendar me-2"></i>Start Time
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-clock me-2"></i>End Time
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-hourglass-half me-2"></i>Duration
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-check-circle me-2"></i>Status
                                        </th>
                                        <th scope="col">
                                            <i class="fas fa-stopwatch me-2"></i>Time Limit
                                        </th>
                                        <th scope="col" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">#@session.SessionId</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar-alt text-muted me-1"></i>
                                                @session.StartTime.ToString("MMM dd, yyyy")
                                                <br>
                                                <small class="text-muted">@session.StartTime.ToString("HH:mm:ss")</small>
                                            </td>
                                            <td>
                                                @if (session.EndTime.HasValue)
                                                {
                                                    <i class="fas fa-calendar-check text-success me-1"></i>
                                                    @session.EndTime.Value.ToString("MMM dd, yyyy")
                                                    <br>
                                                    <small class="text-muted">@session.EndTime.Value.ToString("HH:mm:ss")</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-minus me-1"></i>Not finished
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (session.EndTime.HasValue)
                                                {
                                                    var duration = session.EndTime.Value - session.StartTime;
                                                    <span class="badge bg-info">
                                                        @($"{(int)duration.TotalMinutes}m {duration.Seconds}s")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-clock"></i> In Progress
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (session.IsCompleted)
                                                {
                                                    <span class="badge bg-success fs-6">
                                                        <i class="fas fa-check-circle me-1"></i>Completed
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning fs-6">
                                                        <i class="fas fa-clock me-1"></i>Incomplete
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    @session.TimeLimit min
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <button type="button" class="btn btn-outline-info btn-sm" 
                                                            onclick="viewDetails(@session.SessionId)" 
                                                            data-bs-toggle="tooltip" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (session.IsCompleted)
                                                    {
                                                        <button type="button" class="btn btn-outline-success btn-sm" 
                                                                onclick="viewResults(@session.SessionId)" 
                                                                data-bs-toggle="tooltip" title="View Results">
                                                            <i class="fas fa-chart-bar"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button type="button" class="btn btn-outline-primary btn-sm" 
                                                                onclick="continueQuiz(@session.SessionId)" 
                                                                data-bs-toggle="tooltip" title="Continue Quiz">
                                                            <i class="fas fa-play"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list fa-4x text-muted mb-4"></i>
                            <h4 class="text-muted">No Quiz History Yet</h4>
                            <p class="text-muted mb-4">You haven't taken any quizzes yet. Start your first quiz to see your history here!</p>
                            <a href="@Url.Action("Dashboard", "Users")" class="btn btn-primary btn-lg">
                                <i class="fas fa-play me-2"></i>Take Your First Quiz
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Statistics Row -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white text-center">
                    <div class="card-body">
                        <i class="fas fa-play-circle fa-2x mb-2"></i>
                        <h4>@Model.Count()</h4>
                        <small>Total Sessions</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white text-center">
                    <div class="card-body">
                        <i class="fas fa-check-circle fa-2x mb-2"></i>
                        <h4>@Model.Count(s => s.IsCompleted)</h4>
                        <small>Completed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white text-center">
                    <div class="card-body">
                        <i class="fas fa-clock fa-2x mb-2"></i>
                        <h4>@Model.Count(s => !s.IsCompleted)</h4>
                        <small>Incomplete</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white text-center">
                    <div class="card-body">
                        <i class="fas fa-percentage fa-2x mb-2"></i>
                        <h4>@(Model.Any() ? Math.Round((double)Model.Count(s => s.IsCompleted) / Model.Count() * 100, 1) : 0)%</h4>
                        <small>Success Rate</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="detailsModalLabel">
                    <i class="fas fa-info-circle me-2"></i>Quiz Session Details
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- Content will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        function viewDetails(sessionId) {
            // Show modal with loading spinner
            document.getElementById('modalBody').innerHTML = `
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading session details...</p>
                </div>
            `;
            
            // Show modal immediately
            var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
            modal.show();
            
            // Load actual session details
            fetch('@Url.Action("GetSessionDetails", "Users")?sessionId=' + sessionId)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById('modalBody').innerHTML = `
                            <div class="row">
                                <div class="col-md-6">
                                    <h6><i class="fas fa-info-circle text-primary me-2"></i>Session Information</h6>
                                    <ul class="list-unstyled">
                                        <li><strong>Session ID:</strong> #${data.sessionId}</li>
                                        <li><strong>Quiz Title:</strong> ${data.quizTitle}</li>
                                        <li><strong>Status:</strong> ${data.isCompleted ? '<span class="badge bg-success">Completed</span>' : '<span class="badge bg-warning">Incomplete</span>'}</li>
                                        <li><strong>Difficulty:</strong> ${data.difficultyLevel}</li>
                                        <li><strong>Categories:</strong> ${data.categories.join(', ') || 'N/A'}</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h6><i class="fas fa-clock text-info me-2"></i>Timing Information</h6>
                                    <ul class="list-unstyled">
                                        <li><strong>Start Time:</strong> ${data.startTime}</li>
                                        <li><strong>End Time:</strong> ${data.endTime}</li>
                                        <li><strong>Duration:</strong> ${data.duration}</li>
                                        <li><strong>Time Limit:</strong> ${data.timeLimit} minutes</li>
                                    </ul>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-12">
                                    <h6><i class="fas fa-chart-bar text-success me-2"></i>Performance Summary</h6>
                                    <div class="row">
                                        <div class="col-3 text-center">
                                            <div class="border rounded p-2">
                                                <div class="h4 text-primary">${data.totalQuestions}</div>
                                                <small>Total Questions</small>
                                            </div>
                                        </div>
                                        <div class="col-3 text-center">
                                            <div class="border rounded p-2">
                                                <div class="h4 text-info">${data.answeredQuestions}</div>
                                                <small>Answered</small>
                                            </div>
                                        </div>
                                        <div class="col-3 text-center">
                                            <div class="border rounded p-2">
                                                <div class="h4 text-success">${data.correctAnswers}</div>
                                                <small>Correct</small>
                                            </div>
                                        </div>
                                        <div class="col-3 text-center">
                                            <div class="border rounded p-2">
                                                <div class="h4 text-warning">${data.scorePercentage}%</div>
                                                <small>Score</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            ${data.isCompleted ? '' : `
                            <hr>
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                This quiz is still incomplete. You can continue from where you left off.
                            </div>
                            `}
                        `;
                    } else {
                        document.getElementById('modalBody').innerHTML = `
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Error loading session details: ${data.message}
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    document.getElementById('modalBody').innerHTML = `
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Error loading session details. Please try again.
                        </div>
                    `;
                });
        }

        function viewResults(sessionId) {
            // Redirect to the Quiz Result page
            window.location.href = '@Url.Action("Result", "Quiz")?sessionId=' + sessionId;
        }

        function continueQuiz(sessionId) {
            if (confirm(`Do you want to continue quiz session #${sessionId}?`)) {
                // Show loading message
                const button = document.querySelector(`button[onclick="continueQuiz(${sessionId})"]`);
                const originalContent = button.innerHTML;
                button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                button.disabled = true;
                
                // Redirect to continue quiz
                window.location.href = '@Url.Action("ContinueQuiz", "Users")?sessionId=' + sessionId;
            }
        }
    </script>
    
    <style>
        .bg-gradient-info {
            background: linear-gradient(45deg, #17a2b8, #138496);
        }
        .text-gray-800 {
            color: #5a5c69;
        }
        .breadcrumb {
            background-color: transparent;
            padding: 0;
        }
        .table th {
            border-top: none;
        }
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-2px);
        }
        .btn-group .btn {
            margin-right: 0;
        }
    </style>
}
