@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-game-container">
    <!-- Animated Gradient Orbs -->
    <div class="gradient-orbs">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
        <div class="orb orb-4"></div>
    </div>

    <!-- Floating Quiz Icons with Colors -->
    <div class="floating-icons">
        <i class="fas fa-question-circle icon-float icon-purple"></i>
        <i class="fas fa-brain icon-float icon-pink"></i>
        <i class="fas fa-trophy icon-float icon-gold"></i>
        <i class="fas fa-star icon-float icon-yellow"></i>
        <i class="fas fa-graduation-cap icon-float icon-blue"></i>
        <i class="fas fa-lightbulb icon-float icon-orange"></i>
        <i class="fas fa-rocket icon-float icon-red"></i>
        <i class="fas fa-medal icon-float icon-cyan"></i>
    </div>

    <div class="container mt-5">
        <div class="row justify-content-center align-items-center min-vh-80">
            <!-- Left Side - Illustration -->
            <div class="col-lg-5 d-none d-lg-block">
                <div class="illustration-container">
                    <div class="illustration-card">
                        <div class="quiz-illustration">
                            <div class="quiz-paper">
                                <div class="paper-lines"></div>
                                <div class="paper-lines"></div>
                                <div class="paper-lines"></div>
                            </div>
                            <div class="quiz-characters">
                                <div class="character character-1">
                                    <i class="fas fa-user-graduate"></i>
                                </div>
                                <div class="character character-2">
                                    <i class="fas fa-user-ninja"></i>
                                </div>
                                <div class="character character-3">
                                    <i class="fas fa-user-astronaut"></i>
                                </div>
                            </div>
                            <div class="floating-elements">
                                <div class="element element-1">üí°</div>
                                <div class="element element-2">‚≠ê</div>
                                <div class="element element-3">üèÜ</div>
                                <div class="element element-4">üéØ</div>
                            </div>
                        </div>
                        <h3 class="text-white text-center mt-4">Join the Ultimate Quiz Challenge!</h3>
                        <p class="text-white-50 text-center">Compete with players worldwide and prove your knowledge!</p>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="col-lg-5 col-md-8">
                <!-- Main Login Card -->
                <div class="login-game-card">
                    <!-- Header with Game Title -->
                    <div class="login-header">
                        <div class="game-logo pulse-animation">
                            <i class="fas fa-gamepad"></i>
                            <div class="logo-glow"></div>
                        </div>
                        <h2 class="game-title rainbow-text">Quiz Master</h2>
                        <p class="game-subtitle">üéÆ Enter the Arena of Knowledge üéÆ</p>
                        <div class="level-badge">
                            <span>Level Up Your Brain!</span>
                        </div>
                    </div>

                    <!-- Alert Messages -->
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger game-alert slide-in">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                        </div>
                    }
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success game-alert slide-in">
                            <i class="fas fa-check-circle me-2"></i>
                            @ViewBag.Success
                        </div>
                    }
                    
                    <!-- Login Form -->
                    <form method="post" action="@Url.Action("Login", "Users")" class="login-form">
                        <!-- Username Input -->
                        <div class="form-group-game mb-4">
                            <div class="input-icon input-icon-animated">
                                <i class="fas fa-user"></i>
                            </div>
                            <input type="text" 
                                   class="form-control-game" 
                                   id="email" 
                                   name="UserNameOrEmail" 
                                   placeholder="Username or Email" 
                                   required
                                   autocomplete="username">
                            <label class="floating-label">üéØ Player ID</label>
                            <div class="input-border-effect"></div>
                        </div>
                        
                        <!-- Password Input -->
                        <div class="form-group-game mb-4">
                            <div class="input-icon input-icon-animated">
                                <i class="fas fa-lock"></i>
                            </div>
                            <input type="password" 
                                   class="form-control-game" 
                                   id="password" 
                                   name="password" 
                                   placeholder="Password" 
                                   required
                                   autocomplete="current-password">
                            <label class="floating-label">üîê Access Code</label>
                            <button type="button" class="password-toggle" onclick="togglePassword()">
                                <i class="fas fa-eye" id="toggleIcon"></i>
                            </button>
                            <div class="input-border-effect"></div>
                        </div>
                        
                        <!-- Remember Me -->
                        <div class="remember-forgot mb-4">
                            <label class="custom-checkbox">
                                <input type="checkbox" id="remember">
                                <span class="checkmark"></span>
                                <span class="checkbox-label">Remember Me</span>
                            </label>
                            <a href="#" class="game-link">
                                <i class="fas fa-key me-1"></i>Forgot?
                            </a>
                        </div>
                        
                        <!-- Login Button -->
                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn-game-primary btn-rainbow">
                                <span class="btn-text">üöÄ Start Game</span>
                                <span class="btn-icon"><i class="fas fa-play-circle"></i></span>
                                <div class="btn-shine"></div>
                            </button>
                        </div>
                    </form>
                    
                    <!-- Divider -->
                    <div class="divider-game">
                        <span>‚ö° OR ‚ö°</span>
                    </div>
                    
                    <!-- Register Link -->
                    <div class="text-center mt-4">
                        <p class="text-white mb-3">‚ú® New Player? Join the Adventure! ‚ú®</p>
                        <a href="@Url.Action("Register", "Users")" class="btn-game-secondary">
                            <span class="btn-text">üé® Create Account</span>
                            <span class="btn-icon"><i class="fas fa-user-plus"></i></span>
                        </a>
                    </div>

                    <!-- Stats Footer -->
                    <div class="login-footer">
                        <div class="stat-item stat-purple">
                            <i class="fas fa-users"></i>
                            <span>10K+ Players</span>
                        </div>
                        <div class="stat-item stat-pink">
                            <i class="fas fa-question"></i>
                            <span>5K+ Quizzes</span>
                        </div>
                        <div class="stat-item stat-gold">
                            <i class="fas fa-trophy"></i>
                            <span>Daily Rewards</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Main Container */
    .login-game-container {
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        padding: 2rem 0;
    }

    /* Animated Gradient Orbs */
    .gradient-orbs {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.6;
        animation: float-orb 15s ease-in-out infinite;
    }

    .orb-1 {
        width: 400px;
        height: 400px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        top: -100px;
        left: -100px;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 350px;
        height: 350px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        bottom: -100px;
        right: -100px;
        animation-delay: 3s;
    }

    .orb-3 {
        width: 300px;
        height: 300px;
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        top: 50%;
        left: 50%;
        animation-delay: 6s;
    }

    .orb-4 {
        width: 250px;
        height: 250px;
        background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
        bottom: 20%;
        left: 10%;
        animation-delay: 9s;
    }

    @@keyframes float-orb {
        0%, 100% { transform: translate(0, 0) scale(1); }
        25% { transform: translate(50px, -50px) scale(1.1); }
        50% { transform: translate(-30px, 30px) scale(0.9); }
        75% { transform: translate(40px, 40px) scale(1.05); }
    }

    /* Floating Background Icons with Colors */
    .floating-icons {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .icon-float {
        position: absolute;
        font-size: 3rem;
        animation: float 8s ease-in-out infinite;
        filter: drop-shadow(0 0 10px currentColor);
    }

    .icon-purple { color: rgba(139, 92, 246, 0.4); top: 10%; left: 10%; animation-delay: 0s; }
    .icon-pink { color: rgba(236, 72, 153, 0.4); top: 20%; right: 15%; animation-delay: 1s; }
    .icon-gold { color: rgba(251, 191, 36, 0.4); bottom: 20%; left: 20%; animation-delay: 2s; }
    .icon-yellow { color: rgba(250, 204, 21, 0.4); top: 60%; right: 10%; animation-delay: 3s; }
    .icon-blue { color: rgba(59, 130, 246, 0.4); bottom: 10%; right: 25%; animation-delay: 4s; }
    .icon-orange { color: rgba(249, 115, 22, 0.4); top: 40%; left: 15%; animation-delay: 5s; }
    .icon-red { color: rgba(239, 68, 68, 0.4); top: 70%; left: 60%; animation-delay: 6s; }
    .icon-cyan { color: rgba(6, 182, 212, 0.4); bottom: 40%; right: 40%; animation-delay: 7s; }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg) scale(1); }
        33% { transform: translateY(-30px) rotate(120deg) scale(1.2); }
        66% { transform: translateY(15px) rotate(240deg) scale(0.8); }
    }

    /* Illustration Container */
    .illustration-container {
        padding: 2rem;
        animation: slideRight 0.8s ease-out;
    }

    @@keyframes slideRight {
        from { opacity: 0; transform: translateX(-50px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .illustration-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        padding: 3rem 2rem;
        border: 2px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    }

    .quiz-illustration {
        position: relative;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .quiz-paper {
        width: 200px;
        height: 250px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        animation: paperFloat 3s ease-in-out infinite;
    }

    @@keyframes paperFloat {
        0%, 100% { transform: translateY(0) rotateZ(0deg); }
        50% { transform: translateY(-20px) rotateZ(5deg); }
    }

    .paper-lines {
        width: 100%;
        height: 15px;
        background: rgba(255, 255, 255, 0.3);
        margin: 15px 0;
        border-radius: 5px;
        animation: lineGlow 2s ease-in-out infinite;
    }

    @@keyframes lineGlow {
        0%, 100% { opacity: 0.3; }
        50% { opacity: 0.8; }
    }

    .quiz-characters {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .character {
        position: absolute;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: white;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        animation: characterBounce 2s ease-in-out infinite;
    }

    .character-1 {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        top: -20px;
        left: -30px;
        animation-delay: 0s;
    }

    .character-2 {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        top: 50%;
        right: -30px;
        animation-delay: 0.5s;
    }

    .character-3 {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        bottom: -20px;
        left: 50%;
        animation-delay: 1s;
    }

    @@keyframes characterBounce {
        0%, 100% { transform: translateY(0) scale(1); }
        50% { transform: translateY(-15px) scale(1.1); }
    }

    .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
    }

    .element {
        position: absolute;
        font-size: 2rem;
        animation: elementFloat 4s ease-in-out infinite;
    }

    .element-1 { top: 10%; right: 10%; animation-delay: 0s; }
    .element-2 { top: 20%; left: 10%; animation-delay: 1s; }
    .element-3 { bottom: 20%; right: 20%; animation-delay: 2s; }
    .element-4 { bottom: 10%; left: 20%; animation-delay: 3s; }

    @@keyframes elementFloat {
        0%, 100% { transform: translateY(0) rotate(0deg); opacity: 0.8; }
        50% { transform: translateY(-20px) rotate(180deg); opacity: 1; }
    }

    /* Main Login Card */
    .login-game-card {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        padding: 3rem 2.5rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        border: 2px solid rgba(255, 255, 255, 0.2);
        position: relative;
        z-index: 1;
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(50px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Header */
    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .game-logo {
        width: 90px;
        height: 90px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
        position: relative;
    }

    .game-logo i {
        font-size: 2.8rem;
        color: white;
        z-index: 2;
    }

    .logo-glow {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);
        filter: blur(20px);
        opacity: 0.6;
        animation: glowPulse 2s ease-in-out infinite;
    }

    @@keyframes glowPulse {
        0%, 100% { transform: scale(1); opacity: 0.6; }
        50% { transform: scale(1.2); opacity: 0.9; }
    }

    .pulse-animation {
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    .rainbow-text {
        font-size: 2.8rem;
        font-weight: 800;
        background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c, #4facfe, #00f2fe);
        background-size: 200% auto;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: rainbow 3s linear infinite;
        margin-bottom: 0.5rem;
        text-shadow: 0 0 30px rgba(255, 255, 255, 0.5);
    }

    @@keyframes rainbow {
        to { background-position: 200% center; }
    }

    .game-subtitle {
        color: rgba(255, 255, 255, 0.9);
        font-size: 1.2rem;
        font-weight: 400;
        margin-bottom: 1rem;
    }

    .level-badge {
        display: inline-block;
        padding: 0.5rem 1.5rem;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 50px;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        box-shadow: 0 5px 15px rgba(240, 147, 251, 0.4);
        animation: badgeBounce 2s ease-in-out infinite;
    }

    @@keyframes badgeBounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
    }

    /* Form Groups */
    .form-group-game {
        position: relative;
    }

    .input-icon-animated {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.3rem;
        z-index: 2;
        animation: iconPulse 2s ease-in-out infinite;
    }

    @@keyframes iconPulse {
        0%, 100% { transform: translateY(-50%) scale(1); }
        50% { transform: translateY(-50%) scale(1.1); }
    }

    .form-control-game {
        width: 100%;
        padding: 1.2rem 1rem 1.2rem 3.8rem;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        color: white;
        font-size: 1.05rem;
        transition: all 0.4s ease;
        backdrop-filter: blur(10px);
        position: relative;
    }

    .form-control-game:focus {
        outline: none;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
        border-color: transparent;
        box-shadow: 0 0 30px rgba(102, 126, 234, 0.6), 0 0 60px rgba(240, 147, 251, 0.4);
        transform: translateY(-3px);
    }

    .form-control-game::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .input-border-effect {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
        transition: width 0.4s ease;
        border-radius: 0 0 15px 15px;
    }

    .form-control-game:focus ~ .input-border-effect {
        width: 100%;
    }

    .password-toggle {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.7);
        cursor: pointer;
        font-size: 1.3rem;
        transition: all 0.3s ease;
        z-index: 2;
    }

    .password-toggle:hover {
        color: white;
        transform: translateY(-50%) scale(1.2);
    }

    /* Remember & Forgot */
    .remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .custom-checkbox {
        display: flex;
        align-items: center;
        cursor: pointer;
        color: rgba(255, 255, 255, 0.9);
    }

    .custom-checkbox input {
        display: none;
    }

    .checkmark {
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.4);
        border-radius: 5px;
        margin-right: 10px;
        position: relative;
        transition: all 0.3s ease;
    }

    .custom-checkbox input:checked ~ .checkmark {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-color: #667eea;
    }

    .custom-checkbox input:checked ~ .checkmark::after {
        content: '‚úì';
        position: absolute;
        top: -2px;
        left: 3px;
        color: white;
        font-size: 14px;
    }

    /* Game Buttons */
    .btn-game-primary, .btn-game-secondary {
        width: 100%;
        padding: 1.2rem 2rem;
        border: none;
        border-radius: 15px;
        font-size: 1.15rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
        text-decoration: none;
    }

    .btn-rainbow {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%);
        background-size: 200% auto;
        color: white;
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.5);
        animation: gradientShift 3s ease infinite;
    }

    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .btn-game-primary:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 20px 50px rgba(102, 126, 234, 0.7), 0 0 50px rgba(240, 147, 251, 0.5);
    }

    .btn-shine {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transform: rotate(45deg);
        animation: shine 3s infinite;
    }

    @@keyframes shine {
        0% { left: -50%; }
        100% { left: 150%; }
    }

    .btn-game-secondary {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-game-secondary:hover {
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 40px rgba(255, 255, 255, 0.3);
        color: white;
    }

    .btn-icon {
        font-size: 1.5rem;
    }

    /* Divider */
    .divider-game {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

    .divider-game::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        width: 42%;
        height: 2px;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.1));
    }

    .divider-game::after {
        content: '';
        position: absolute;
        right: 0;
        top: 50%;
        width: 42%;
        height: 2px;
        background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.3), transparent);
    }

    .divider-game span {
        color: rgba(255, 255, 255, 0.9);
        padding: 0 1rem;
        font-weight: 700;
        font-size: 1.1rem;
    }

    /* Links */
    .game-link {
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .game-link:hover {
        color: white;
        text-shadow: 0 0 15px rgba(255, 255, 255, 0.8);
        transform: translateX(5px);
    }

    /* Stats Footer */
    .login-footer {
        display: flex;
        justify-content: space-around;
        margin-top: 2.5rem;
        padding-top: 2rem;
