<style>
    /* Main Container */
    .login-game-container {
        min-height: 100vh;
        position: relative;
        overflow: hidden;
        padding: 2rem 0;
    }

    /* Floating Background Icons */
    .floating-icons {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .icon-float {
        position: absolute;
        font-size: 3rem;
        color: rgba(255, 255, 255, 0.1);
        animation: float 6s ease-in-out infinite;
    }

    .icon-float:nth-child(1) { top: 10%; left: 10%; animation-delay: 0s; }
    .icon-float:nth-child(2) { top: 20%; right: 15%; animation-delay: 1s; }
    .icon-float:nth-child(3) { bottom: 20%; left: 20%; animation-delay: 2s; }
    .icon-float:nth-child(4) { top: 60%; right: 10%; animation-delay: 3s; }
    .icon-float:nth-child(5) { bottom: 10%; right: 25%; animation-delay: 4s; }
    .icon-float:nth-child(6) { top: 40%; left: 15%; animation-delay: 5s; }

    @@keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(5deg); }
    }

    /* Main Login Card */
    .login-game-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        padding: 3rem 2.5rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        border: 2px solid rgba(255, 255, 255, 0.2);
        position: relative;
        z-index: 1;
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(50px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Header */
    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .game-logo {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .game-logo i {
        font-size: 2.5rem;
        color: white;
    }

    .pulse-animation {
        animation: pulse 2s ease-in-out infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4); }
        50% { transform: scale(1.05); box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6); }
    }

    .game-title {
        font-size: 2.5rem;
        font-weight: 800;
        background: linear-gradient(135deg, #ffffff 0%, #f0f0f0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .game-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
        font-weight: 300;
    }

    /* Form Groups */
    .form-group-game {
        position: relative;
    }

    .input-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(255, 255, 255, 0.6);
        font-size: 1.2rem;
        z-index: 2;
    }

    .form-control-game {
        width: 100%;
        padding: 1rem 1rem 1rem 3.5rem;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        color: white;
        font-size: 1rem;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
    }

    .form-control-game:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.15);
        border-color: #667eea;
        box-shadow: 0 0 20px rgba(102, 126, 234, 0.4);
        transform: translateY(-2px);
    }

    .form-control-game::placeholder {
        color: rgba(255, 255, 255, 0.5);
    }

    .password-toggle {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.6);
        cursor: pointer;
        font-size: 1.2rem;
        transition: color 0.3s ease;
    }

    .password-toggle:hover {
        color: white;
    }

    /* Game Buttons */
    .btn-game-primary, .btn-game-secondary {
        width: 100%;
        padding: 1rem 2rem;
        border: none;
        border-radius: 15px;
        font-size: 1.1rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-game-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
    }

    .btn-game-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.6);
    }

    .btn-game-secondary {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
    }

    .btn-game-secondary:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2);
        color: white;
    }

    .btn-icon {
        font-size: 1.3rem;
    }

    /* Divider */
    .divider-game {
        position: relative;
        text-align: center;
        margin: 2rem 0;
    }

    .divider-game::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        width: 40%;
        height: 1px;
        background: rgba(255, 255, 255, 0.2);
    }

    .divider-game::after {
        content: '';
        position: absolute;
        right: 0;
        top: 50%;
        width: 40%;
        height: 1px;
        background: rgba(255, 255, 255, 0.2);
    }

    .divider-game span {
        color: rgba(255, 255, 255, 0.6);
        padding: 0 1rem;
        font-weight: 600;
    }

    /* Links */
    .game-link {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .game-link:hover {
        color: white;
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }

    /* Stats Footer */
    .login-footer {
        display: flex;
        justify-content: space-around;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .stat-item {
        text-align: center;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.85rem;
    }

    .stat-item i {
        display: block;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: #667eea;
    }

    /* Alerts */
    .game-alert {
        background: rgba(255, 255, 255, 0.15) !important;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2) !important;
        color: white !important;
        border-radius: 15px;
        margin-bottom: 1.5rem;
    }

    .slide-in {
        animation: slideIn 0.5s ease-out;
    }

    @@keyframes slideIn {
        from { opacity: 0; transform: translateX(-50px); }
        to { opacity: 1; transform: translateX(0); }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .login-game-card {
            padding: 2rem 1.5rem;
            border-radius: 20px;
        }

        .game-title {
            font-size: 2rem;
        }

        .icon-float {
            font-size: 2rem;
        }

        .login-footer {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Add input animation
        document.querySelectorAll('.form-control-game').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', function() {
                if (!this.value) {
                    this.parentElement.classList.remove('focused');
                }
            });
        });
    </script>
}
