@model List<QuizApplication.Models.UserCustomQuiz>
@{
    ViewData["Title"] = "My Custom Quizzes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list-alt me-2"></i>My Custom Quizzes</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-2"></i>Create New Quiz
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
            <h4>No Custom Quizzes Yet</h4>
            <p class="text-muted">Create your first custom quiz to get started!</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="fas fa-plus-circle me-2"></i>Create Your First Quiz
            </a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var quiz in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm hover-shadow">
                    <div class="card-header @(quiz.IsPublic ? "bg-success" : "bg-warning") text-white">
                        <h5 class="mb-0">
                            <i class="fas @(quiz.IsPublic ? "fa-globe" : "fa-lock") me-2"></i>
                            @quiz.Title
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(quiz.Description))
                        {
                            <p class="card-text text-muted">@quiz.Description</p>
                        }
                        
                        <div class="quiz-info mt-3">
                            <div class="mb-2">
                                <i class="fas fa-question-circle text-primary me-2"></i>
                                <strong>@quiz.Questions.Count</strong> questions
                            </div>
                            <div class="mb-2">
                                <i class="fas fa-clock text-warning me-2"></i>
                                <strong>@quiz.TimeLimit</strong> minutes
                            </div>
                            <div class="mb-2">
                                <i class="fas fa-globe text-info me-2"></i>
                                @(quiz.IsPublic ? "Public Quiz" : "Private Quiz")
                            </div>
                            <div class="mb-2 text-muted">
                                <i class="fas fa-calendar me-2"></i>
                                <small>Created: @quiz.CreatedDate.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@quiz.UserQuizId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            <div class="btn-group">
                                <a asp-action="AddQuestions" asp-route-id="@quiz.UserQuizId" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-edit me-1"></i>Edit Questions
                                </a>
                                <a asp-action="AssignUsers" asp-route-id="@quiz.UserQuizId" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-user-plus me-1"></i>Assign
                                </a>
                                <a asp-action="Delete" asp-route-id="@quiz.UserQuizId" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
    }
</style>
