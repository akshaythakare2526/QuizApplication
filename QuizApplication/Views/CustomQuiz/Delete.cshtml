@model QuizApplication.ViewModels.CustomQuizDetailsViewModel
@{
    ViewData["Title"] = "Delete Quiz";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Quiz
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this quiz?
                </div>

                <h4 class="mb-3">@Model.Title</h4>
                
                <div class="quiz-details bg-light p-3 rounded mb-4">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="mb-3">@Model.Description</p>
                    }
                    
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="fas fa-user text-secondary me-2"></i>
                                <strong>Created by:</strong> @Model.CreatedBy
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-question-circle text-primary me-2"></i>
                                <strong>Questions:</strong> @Model.QuestionCount
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2">
                                <i class="fas fa-clock text-warning me-2"></i>
                                <strong>Time Limit:</strong> @Model.TimeLimit minutes
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-tag text-info me-2"></i>
                                <strong>Category:</strong> @Model.CategoryName
                            </p>
                        </div>
                    </div>
                    
                    <p class="mb-0 text-muted">
                        <i class="fas fa-calendar me-2"></i>
                        Created on @Model.CreatedDate.ToString("MMMM dd, yyyy")
                    </p>
                </div>

                <div class="alert alert-danger mb-4">
                    <h6 class="alert-heading">
                        <i class="fas fa-info-circle me-2"></i>This action cannot be undone
                    </h6>
                    <p class="mb-0">
                        Deleting this quiz will remove it from your quiz list. Users who have been assigned this quiz will no longer see it.
                    </p>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CustomQuizId" />
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                        <a asp-action="Details" asp-route-id="@Model.CustomQuizId" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash me-2"></i>Yes, Delete This Quiz
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
