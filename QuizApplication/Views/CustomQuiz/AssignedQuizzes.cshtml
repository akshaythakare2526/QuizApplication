@model List<QuizApplication.Models.UserCustomQuizAssignment>
@{
    ViewData["Title"] = "Assigned Quizzes";
    var pendingQuizzes = Model?.Where(a => !a.IsCompleted).ToList() ?? new List<QuizApplication.Models.UserCustomQuizAssignment>();
    var completedQuizzes = Model?.Where(a => a.IsCompleted).ToList() ?? new List<QuizApplication.Models.UserCustomQuizAssignment>();
}

<div class="mb-4">
    <h2 class="mb-4">
        <i class="fas fa-inbox me-2"></i>Quizzes Assigned to Me
    </h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <ul class="nav nav-tabs mb-4">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#pending">
                <i class="fas fa-clock me-1"></i>Pending (@pendingQuizzes.Count)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#completed">
                <i class="fas fa-check-circle me-1"></i>Completed (@completedQuizzes.Count)
            </a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="pending">
            @if (pendingQuizzes.Any())
            {
                <div class="row">
                    @foreach (var assignment in pendingQuizzes)
                    {
                        var quiz = assignment.UserQuiz;
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm position-relative">
                                @if (!assignment.IsViewed)
                                {
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge bg-danger">NEW!</span>
                                    </div>
                                }
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">@quiz.Title</h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(quiz.Description))
                                    {
                                        <p class="card-text text-muted">@quiz.Description</p>
                                    }
                                    
                                    <div class="quiz-info mt-3">
                                        <div class="mb-2">
                                            <i class="fas fa-user text-secondary me-2"></i>
                                            By: <strong>@quiz.CreatedBy.Username</strong>
                                        </div>
                                        <div class="mb-2">
                                            <i class="fas fa-question-circle text-primary me-2"></i>
                                            <strong>@quiz.Questions.Count</strong> questions
                                        </div>
                                        <div class="mb-2">
                                            <i class="fas fa-clock text-warning me-2"></i>
                                            <strong>@quiz.TimeLimit</strong> minutes
                                        </div>
                                        <div class="mb-2">
                                            <i class="fas fa-calendar text-muted me-2"></i>
                                            <small>Assigned: @assignment.AssignedDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-grid gap-2">
                                        <a asp-action="Details" asp-route-id="@quiz.UserQuizId" class="btn btn-primary">
                                            <i class="fas fa-play me-2"></i>View Quiz
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You don't have any pending quiz assignments. Check back later!
                </div>
            }
        </div>

        <div class="tab-pane fade" id="completed">
            @if (completedQuizzes.Any())
            {
                <div class="row">
                    @foreach (var assignment in completedQuizzes)
                    {
                        var quiz = assignment.UserQuiz;
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-check me-2"></i>@quiz.Title
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(quiz.Description))
                                    {
                                        <p class="card-text text-muted">@quiz.Description</p>
                                    }
                                    
                                    <div class="quiz-info mt-3">
                                        <div class="mb-2">
                                            <i class="fas fa-user text-secondary me-2"></i>
                                            By: <strong>@quiz.CreatedBy.Username</strong>
                                        </div>
                                        @if (assignment.Score.HasValue && assignment.TotalQuestions.HasValue)
                                        {
                                            <div class="mb-2">
                                                <i class="fas fa-trophy text-warning me-2"></i>
                                                Score: <strong class="text-success">@assignment.Score / @assignment.TotalQuestions</strong>
                                            </div>
                                        }
                                        <div class="mb-2">
                                            <i class="fas fa-question-circle text-primary me-2"></i>
                                            <strong>@quiz.Questions.Count</strong> questions
                                        </div>
                                        @if (assignment.CompletedDate.HasValue)
                                        {
                                            <div class="mb-2">
                                                <i class="fas fa-calendar text-muted me-2"></i>
                                                <small>Completed: @assignment.CompletedDate.Value.ToString("MMM dd, yyyy")</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <a asp-action="Details" asp-route-id="@quiz.UserQuizId" class="btn btn-outline-secondary btn-sm w-100">
                                        <i class="fas fa-eye me-2"></i>View Results
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    You haven't completed any quizzes yet.
                </div>
            }
        </div>
    </div>
</div>
