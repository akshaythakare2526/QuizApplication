@model IEnumerable<QuizApplication.Models.UserCustomQuiz>
@{
    ViewData["Title"] = "All Custom Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-clipboard-list me-2"></i>All Custom Quizzes</h1>
            <p class="text-muted mb-0">Admin can review, assign to users, edit questions, or delete any quiz.</p>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Users")">Dashboard</a></li>
                <li class="breadcrumb-item active">Custom Quizzes</li>
            </ol>
        </nav>
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-gradient-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0"><i class="fas fa-table me-2"></i>Quizzes</h5>
                <div>
                    <a href="@Url.Action("Create", "CustomQuiz")" class="btn btn-success btn-sm">
                        <i class="fas fa-plus me-1"></i>Create Quiz
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-glass mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Created By</th>
                            <th>Created</th>
                            <th class="text-center">Questions</th>
                            <th class="text-center">Assigned</th>
                            <th class="text-center">Public</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var q in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@q.Title</td>
                                    <td>
                                        <i class="fas fa-user me-1 text-muted"></i>
                                        @q.CreatedBy?.Username
                                    </td>
                                    <td>@q.CreatedDate.ToString("MMM dd, yyyy")</td>
                                    <td class="text-center">
                                        <span class="badge bg-info">@q.Questions.Count</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-warning text-dark">@q.Assignments.Count</span>
                                    </td>
                                    <td class="text-center">
                                        @if (q.IsPublic)
                                        {<span class="badge bg-success">Public</span>}
                                        else
                                        {<span class="badge bg-secondary">Private</span>}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Details", "CustomQuiz", new { id = q.UserQuizId })" class="btn btn-outline-info btn-sm" title="Details"><i class="fas fa-eye"></i></a>
                                            <a href="@Url.Action("SelectQuestions", "CustomQuiz", new { id = q.UserQuizId })" class="btn btn-outline-primary btn-sm" title="Edit Questions"><i class="fas fa-edit"></i></a>
                                            <a href="@Url.Action("AssignUsers", "CustomQuiz", new { id = q.UserQuizId })" class="btn btn-outline-warning btn-sm" title="Assign to Users"><i class="fas fa-user-plus"></i></a>
                                            <a href="@Url.Action("Delete", "CustomQuiz", new { id = q.UserQuizId })" class="btn btn-outline-danger btn-sm" title="Delete"><i class="fas fa-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No custom quizzes found</h5>
                                    <p class="text-muted">Create your first custom quiz to get started.</p>
                                    <a href="@Url.Action("Create", "CustomQuiz")" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Create Quiz
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table-glass {
            --bs-table-bg: rgba(13, 24, 58, 0.55);
            --bs-table-striped-bg: rgba(255, 255, 255, 0.06);
            --bs-table-hover-bg: rgba(255, 255, 255, 0.1);
            --bs-table-color: rgba(255, 255, 255, 0.98);
            color: var(--bs-table-color);
            border-color: rgba(255, 255, 255, 0.12);
        }
        .table-glass > :not(caption) > * > * {
            background-color: transparent !important;
            color: var(--bs-table-color) !important;
            vertical-align: middle;
        }
        .table-glass thead.table-dark th { border-bottom-color: rgba(255,255,255,0.2); }
        .table-responsive { overflow-x: auto; }
    </style>
}
