        background: linear-gradient(135deg, rgba(40, 167, 69, 0.25) 0%, rgba(32, 201, 151, 0.15) 100%) !important;
        box-shadow: 0 6px 25px rgba(40, 167, 69, 0.4), 0 0 20px rgba(40, 167, 69, 0.3);
    }
    
