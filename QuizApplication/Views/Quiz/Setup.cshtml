        color: rgba(255, 255, 255, 0.95) !important;
        text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
    }

    /* Icons with Glow */
    .fas, .fab, .far {
        filter: drop-shadow(0 0 8px rgba(100, 150, 255, 0.4));
    }
    
    .fa-folder-open {
        color: rgba(100, 150, 255, 0.9) !important;
        filter: drop-shadow(0 0 10px rgba(100, 150, 255, 0.5));
    }
    
    .text-primary i {
        color: rgba(100, 150, 255, 0.95) !important;
        text-shadow: 0 0 10px rgba(100, 150, 255, 0.5);
    }
    
    .text-info i {
        color: rgba(23, 162, 184, 0.95) !important;
        text-shadow: 0 0 10px rgba(23, 162, 184, 0.5);
    }
    
    .text-warning i {
        color: rgba(255, 193, 7, 0.95) !important;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.5);
    }
    
    .text-danger i {
        color: rgba(220, 53, 69, 0.95) !important;
        text-shadow: 0 0 10px rgba(220, 53, 69, 0.5);
    }
    
    .text-success i {
        color: rgba(40, 167, 69, 0.95) !important;
        text-shadow: 0 0 10px rgba(40, 167, 69, 0.5);
    }

    /* Button Enhancements */
    .btn {
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        font-weight: 600;
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.25);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, rgba(79, 109, 245, 0.9) 0%, rgba(100, 150, 255, 0.9) 100%);
        color: rgba(255, 255, 255, 0.98) !important;
    }
    
    .btn-secondary {
        background: linear-gradient(135deg, rgba(108, 117, 125, 0.8) 0%, rgba(73, 80, 87, 0.8) 100%);
        color: rgba(255, 255, 255, 0.98) !important;
    }
    
    .btn-info {
        background: linear-gradient(135deg, rgba(23, 162, 184, 0.9) 0%, rgba(54, 185, 204, 0.9) 100%);
        color: rgba(255, 255, 255, 0.98) !important;
    }

    /* Validation Text */
    .text-danger {
        color: rgba(255, 100, 120, 0.95) !important;
        text-shadow: 0 1px 4px rgba(0, 0, 0, 0.6), 0 0 8px rgba(255, 100, 120, 0.4);
        font-weight: 600;
    }

    /* Preview Content */
    #previewContent {
        color: rgba(255, 255, 255, 0.9) !important;
    }
    
    #previewContent strong {
        color: rgba(255, 255, 255, 0.95) !important;
        text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5);
    }
    
    /* Responsive Adjustments */
    @@media (max-width: 768px) {
        .category-card {
            margin-bottom: 1rem;
        }
        
        .form-label {
            font-size: 0.95rem;
        }
