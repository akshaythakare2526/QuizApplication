    }
    
    .alert-danger {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.25) 0%, rgba(231, 74, 59, 0.2) 100%) !important;
        border: 1px solid rgba(220, 53, 69, 0.4);
        color: rgba(255, 200, 210, 0.95) !important;
