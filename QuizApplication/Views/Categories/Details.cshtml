@model QuizApplication.Models.Categories

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-eye"></i> Category Details
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Category ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryId)</dd>
                        
                        <dt class="col-sm-4">Category Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model?.CategoryId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
