@model QuizApplication.Models.Categories

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Category
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.HasQuestions == true)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning:</strong> This category has associated questions. You cannot delete it until all questions are removed or reassigned to other categories.
                        </div>
                    }

                    <p class="lead">Are you sure you want to delete this category?</p>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Category ID:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryId)</dd>
                        
                        <dt class="col-sm-4">Category Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>
                    </dl>

                    @if (ViewBag.HasQuestions != true)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>This action cannot be undone!</strong>
                        </div>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CategoryId" />
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a asp-action="Index" class="btn btn-secondary me-md-2">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete Category
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
}
