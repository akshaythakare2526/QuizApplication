@model QuizApplication.ViewModels.WelcomeViewModel
@{
    ViewData["Title"] = "Welcome to Quiz Application";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/welcome.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="welcome-container">
        <!-- Hero Section -->
        <div class="hero-section">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-lg-8 text-center">
                            <div class="hero-image-container animate-float mb-4">
                                <img src="~/images/quiz-hero.svg" alt="Quiz Illustration" class="img-fluid" style="max-width: 400px;" />
                            </div>
                            <h1 class="display-3 fw-bold text-white mb-4 animate-fade-in">
                                Welcome to Quiz Master
                            </h1>
                            <p class="lead text-white mb-4 animate-fade-in-delay">
                                Test your knowledge, challenge yourself, and compete with others! 
                                Join thousands of learners on an exciting journey of discovery and growth.
                            </p>
                            <div class="text-white mb-5 animate-fade-in-delay-2">
                                <div class="feature-list">
                                    <div class="feature-item">
                                        <i class="fas fa-check-circle text-success me-2"></i> Multiple quiz categories
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-check-circle text-success me-2"></i> Track your progress and scores
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-check-circle text-success me-2"></i> Practice mode available
                                    </div>
                                    <div class="feature-item">
                                        <i class="fas fa-check-circle text-success me-2"></i> Compete with top performers
                                    </div>
                                </div>
                            </div>
                            <div class="action-buttons animate-fade-in-delay-3">
                                <a href="@Url.Action("Index", "Users")" class="btn btn-primary btn-lg px-5 py-3 me-3">
                                    <i class="fas fa-sign-in-alt me-2"></i> Login
                                </a>
                                <a href="@Url.Action("Create", "Users")" class="btn btn-success btn-lg px-5 py-3">
                                    <i class="fas fa-user-plus me-2"></i> Sign Up
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="features-section py-5">
            <div class="container">
                <h2 class="text-center mb-5 fw-bold">Why Choose Quiz Master?</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="feature-card text-center p-4">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-brain fa-3x text-primary"></i>
                            </div>
                            <h4 class="fw-bold">Diverse Categories</h4>
                            <p class="text-muted">Explore various subjects and topics to expand your knowledge base.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-card text-center p-4">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-chart-line fa-3x text-success"></i>
                            </div>
                            <h4 class="fw-bold">Track Progress</h4>
                            <p class="text-muted">Monitor your performance and see how you improve over time.</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="feature-card text-center p-4">
                            <div class="feature-icon mb-3">
                                <i class="fas fa-trophy fa-3x text-warning"></i>
                            </div>
                            <h4 class="fw-bold">Compete & Win</h4>
                            <p class="text-muted">Challenge yourself and compete with other quiz enthusiasts.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Scores Section -->
        <div class="top-scores-section py-5 bg-light">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="fw-bold">
                        <i class="fas fa-star text-warning me-2"></i>
                        Top Performers
                    </h2>
                    <p class="text-muted">See who's leading the way!</p>
                </div>
                
                @if (Model.TopScores != null && Model.TopScores.Any())
                {
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="leaderboard-card">
                                @for (int i = 0; i < Model.TopScores.Count; i++)
                                {
                                    var score = Model.TopScores[i];
                                    var rankClass = i == 0 ? "rank-gold" : i == 1 ? "rank-silver" : i == 2 ? "rank-bronze" : "rank-default";
                                    var medalIcon = i == 0 ? "fa-trophy" : i == 1 ? "fa-medal" : i == 2 ? "fa-award" : "fa-star";
                                    
                                    <div class="leaderboard-item @rankClass">
                                        <div class="rank-badge">
                                            <i class="fas @medalIcon"></i>
                                            <span class="rank-number">@(i + 1)</span>
                                        </div>
                                        <div class="player-info">
                                            <div class="player-name">@score.Username</div>
                                            <div class="player-date">
                                                <i class="far fa-calendar-alt me-1"></i>
                                                @score.CompletedDate.ToString("MMM dd, yyyy")
                                            </div>
                                        </div>
                                        <div class="score-info">
                                            <div class="score-value">@score.Score / @score.MaxScore</div>
                                            <div class="score-percentage">@score.Percentage%</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <div class="empty-leaderboard p-5">
                            <i class="fas fa-chart-bar fa-4x text-muted mb-3"></i>
                            <p class="text-muted fs-5">No scores yet. Be the first to take a quiz!</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Call to Action Section -->
        <div class="cta-section py-5">
            <div class="container text-center">
                <h2 class="fw-bold text-white mb-4">Ready to Test Your Knowledge?</h2>
                <p class="lead text-white mb-4">Join our community and start your quiz journey today!</p>
                <div class="action-buttons">
                    <a href="@Url.Action("Create", "Users")" class="btn btn-light btn-lg px-5 py-3 me-3">
                        <i class="fas fa-rocket me-2"></i> Get Started Now
                    </a>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer py-4 bg-dark text-white">
            <div class="container text-center">
                <p class="mb-0">&copy; @DateTime.Now.Year Quiz Master. All rights reserved.</p>
                <p class="mt-2 text-muted">
                    <i class="fas fa-heart text-danger"></i> Made with passion for learning
                </p>
            </div>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
