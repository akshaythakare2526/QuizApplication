<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QuizApplication</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/moonlight-text-fix.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuizApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="app-body">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-gradient-custom border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap me-2"></i>Quiz Master
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var userRole = Context.Session.GetString("UserRole");
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Users" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                            @if (userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Users" asp-action="Manage">
                                        <i class="fas fa-users-cog me-1"></i>Manage Users
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog me-1"></i>Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Create", "Users")"><i class="fas fa-user-plus me-2"></i>Add User</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Categories")"><i class="fas fa-tags me-2"></i>Categories</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Questions")"><i class="fas fa-question me-2"></i>Questions</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("MyQuizzes", "CustomQuiz")"><i class="fas fa-clipboard-list me-2"></i>Custom Quizzes</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="#"><i class="fas fa-chart-bar me-2"></i>Reports</a></li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Quiz" asp-action="Setup">
                                        <i class="fas fa-play me-1"></i>Take Quiz
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="customQuizDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-clipboard-list me-1"></i>Custom Quizzes
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Create", "CustomQuiz")"><i class="fas fa-plus-circle me-2"></i>Create Quiz</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("MyQuizzes", "CustomQuiz")"><i class="fas fa-list-alt me-2"></i>My Quizzes</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("AssignedQuizzes", "CustomQuiz")"><i class="fas fa-inbox me-2"></i>Assigned to Me</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="@Url.Action("PublicQuizzes", "CustomQuiz")"><i class="fas fa-globe me-2"></i>Public Quizzes</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Users" asp-action="QuizHistory">
                                        <i class="fas fa-history me-1"></i>My History
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Users" asp-action="Index">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Users" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            var userRole = Context.Session.GetString("UserRole");
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user me-1"></i>@Context.Session.GetString("Username")
                                    @if (userRole == "Admin")
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Admin</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="EditProfile"><i class="fas fa-user-edit me-2"></i>Edit Profile</a></li>
                                    @if (userRole == "User")
                                    {
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="QuizHistory"><i class="fas fa-history me-2"></i>Quiz History</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Users" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="content-wrapper">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer-custom text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-1">&copy; @DateTime.Now.Year Quiz Master. All rights reserved.</p>
            <p class="mb-0 text-white-50">
                <i class="fas fa-heart text-danger"></i> Made with passion for learning
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
